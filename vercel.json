{
  "version": 2,
  "builds": [
    {
      "src": "apps/next/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "apps/next/$1"
    }
  ],
  "env": {
    "NEXTAUTH_SECRET": "@nextauth-secret",
    "NEXTAUTH_URL": "@nextauth-url",
    "FERGEH_ENCRYPTION_KEY": "@fergeh-encryption-key",
    "GOOGLE_CLIENT_ID": "@google-client-id",
    "GOOGLE_CLIENT_SECRET": "@google-client-secret",
    "RESEND_API_KEY": "@resend-api-key",
    "EMAIL_SENDER": "@email-sender",
    "USE_RESEND_PREVIEWS": "@use-resend-previews",
    "BYPASS_ORG_DOMAIN_BLACKLIST": "@bypass-org-domain-blacklist",
    "METRICS_API_USER": "@metrics-api-user",
    "METRICS_API_PASSWORD": "@metrics-api-password",
    "NEXT_PUBLIC_APP_URL": "@next-public-app-url",
    "INNGEST_EVENT_KEY": "@inngest-event-key"
  },
  "hooks": {
    "postinstall": "bun install"
  },
  "outputDirectory": "apps/next/.next"
}
